    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell", 
            "command": "mingw32-make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Make: clean",
            "type": "shell", 
            "command": "mingw32-make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}